
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    
<script>
      function initMap() {
          var uluru = { lat: 10.7603208, lng: 106.6811801 };
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 16,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDeVytkAOKDHG7vpcqgESqyiA7ivdSnc0s&callback=initMap">
</script>
    }

<div id="contact-page" class="container">
